# ===========================================
# Home Accounting Legendary - Environment Variables
# ===========================================
# Скопируйте этот файл как .env и заполните реальными значениями

# ===========================================
# DJANGO SETTINGS
# ===========================================
# Режим работы Django (dev/production)
DJANGO_SETTINGS_MODULE=core.settings.dev

# Секретный ключ Django (сгенерируйте новый!)
SECRET_KEY=your-secret-key-here-change-this-in-production

# Режим отладки (True для разработки, False для продакшена)
DEBUG=True

# Разрешенные хосты (через запятую)
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Настройки PostgreSQL
DB_NAME=HAL_development
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=127.0.0.1
DB_PORT=5432

# ===========================================
# TELEGRAM BOT CONFIGURATION
# ===========================================
# Токен бота от @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# URL сервера для webhook (без слеша в конце)
TELEGRAM_WEBHOOK_URL=https://yourdomain.com

# Секретный токен для webhook (сгенерируйте случайную строку)
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret-token

# Имя пользователя бота (без @)
BOT_USERNAME=your_bot_username

# URL Telegram Mini App (полный URL с протоколом)
TELEGRAM_MINIAPP_URL=https://wallet.my-bucket.ru/telegram/mini-app/

# Разрешить доступ к Mini App без Telegram данных (для разработки)
TELEGRAM_MINIAPP_DEBUG_MODE=False

# ===========================================
# SECURITY SETTINGS (Production only)
# ===========================================
# Настройки безопасности для продакшена
SECURE_SSL_REDIRECT=False
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Путь к файлу логов
LOG_FILE_PATH=/var/log/django/wallet_app.log

# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ===========================================
# STATIC FILES CONFIGURATION
# ===========================================
# Путь к статическим файлам (для продакшена)
STATIC_ROOT=/var/www/wallet/static/

# Путь к медиа файлам (для продакшена)
MEDIA_ROOT=/var/www/wallet/media/

# ===========================================
# REDIS CONFIGURATION (Optional)
# ===========================================
# Настройки Redis для кеширования и сессий
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
# Настройки SMTP для отправки email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# ===========================================
# CELERY CONFIGURATION (Optional)
# ===========================================
# Настройки Celery для фоновых задач
CELERY_BROKER_URL=redis://127.0.0.1:6379/1
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/1